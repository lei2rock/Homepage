/***********************************************************/
/************************* Header **************************/
/***********************************************************/

/* header-隐藏顶部线条 */
.headband {
  display: none;
}

/* header-顶部空白 */
.header {
  margin-top: 10px;

  +mobile() {
    margin-top: 0;
  }
}

/* header-顶部圆角 */
.header-inner {
  myradius();

  +mobile() {
    border-radius: 0 0 $myradius $myradius;
  }
}

/* header-页面背景 */
body {
  background-image: url($body-bg-url);
  background-position: 50% 50%;
  background-repeat: repeat;
  background-attachment: fixed;
}

/***********************************************************/
/************************ Sidebar **************************/
/***********************************************************/

/* sidebar-标题背景 */
.site-brand-container {
  background: url($site-brand-bg-url);
  background-position: 70% 20%;
  background-size: cover;
}

/* sidebar-标题加粗 */
.site-title {
  font-weight: bold;
}

/* sidebar-副标题 */
.site-subtitle {
  font-family: $font-family-quote;
  font-weight: bold;
  color: var(--brand-color);
}

/* sidebar-侧边背景 */
.sidebar {
  background: transparent;
}

/* sidebar-圆角 */
.sidebar-inner, //侧边
.sub-menu { //二级菜单
  myradius();
}

/* sidebar-文章目录、站点概览 */
.sidebar-nav li {
  color: var(--link-color);
}

/* sidebar-隐藏归档菜单 */
.menu-item-archives {
  display: none !important;
}

/***********************************************************/
/************************** Post ***************************/
/***********************************************************/

/* post-文章卡片圆角 */
.post-block,
.post-block+.post-block {
  myradius();
}

/* post-首页文章标题 */
.index .post-title {
  text-align: left;
  border-left: $btn-default-bg 8px solid;
  padding-left: 10px;
}

/* post-首页文章信息 */
.index .post-meta {
  text-align: left;
}

/* post-文章标题 */
.posts-expand .post-title {
  font-size: 1.35em;
  font-weight: bold;

  +mobile() {
    margin-top: 10px;
  }
}

/* post-文章信息 */
.posts-expand .post-meta {
  margin-bottom: 20px;
}

/* post-文章编辑按钮 */
.posts-expand .post-title .post-edit-link {
  font-size: 0.8em;
}

/* post-正文字号 */
.post-body {
  font-size: 1em;
}

/* post-段后距 */
p {
  margin-bottom: 10px;
}

/* post-字体颜色（思源宋体） */
.menu .menu-item a,
.posts-collapse .post-title a,
.posts-expand .post-title-link {
  color: var(--text-color);
}

/* post-超链接 */
.post-body a,
.popular-posts .popular-posts-item .popular-posts-title a {
  border-bottom-color: #ccc;

  &:hover {
    border-bottom-color: var(--link-hover-color);
  }
}

/* post-图片标题 */
.post-body .image-caption {
  margin: 0px auto 15px;
}

/* post-图片阴影 */
.posts-expand .post-body img {
  box-shadow: $image-box-shadow;
}

/* post-行内代码 */
code {
  font-size: 85%;
  background: none;
  color: var(--text-color);
}

/* post-代码块 */
.highlight-container {
  background: $btn-default-bg;
}

/* post-引用与 note 字体 */
blockquote p,
.post-body .note {
  font-family: $font-family-quote;
}

/* post-文字加粗 */
.post-body .tabs ul.nav-tabs li.tab a, //标签选择卡片
.popular-posts-header { //相关推荐标题
  font-weight: bold;
}

/***********************************************************/
/************************ Button ***************************/
/***********************************************************/

/* button-back2top */
.back-to-top {
  background: $btn-default-bg;
  opacity: 0.8;
  font-weight: bold;
  font-size: 1em;
  border-radius: 1em;
}

/* button-reward */
.reward-container button {
  height: 35px;
  width: 35px;
  padding: 1.5px 0 0;
  background: $btn-default-bg;
  border-radius: 5px;
  btn-shadow();

  &:hover{
    background: $btn-default-hover-bg;
  }
}

/* 修改选中字符的颜色 */
::selection {
  selection-color();
}

::-moz-selection {
  selection-color();
}

/***********************************************************/
/****************** Pagination & Footer ********************/
/***********************************************************/

.pagination {
  border: none;
  background: none;
  box-shadow: none;
}

.pagination .prev,
.pagination .next,
.pagination .page-number {
  border: none;
  border-radius: 100%;
  the-transition-ease-out();

  &:hover {
    color: #fff;
    background: $btn-default-hover-bg;
    btn-shadow-only();
  }
}

.pagination .page-number.current {
  border-radius: 100%;
  background: $btn-default-bg;
  btn-shadow-only();
}

/* footer */
.footer,
.footer a {
  color: var(--link-color);
}

/***********************************************************/
/************************ Overview *************************/
/***********************************************************/

/* categories */
+mobile() {
  .category-all-page .category-list-item {
    margin: 10px 40px;
  }

  .category-all-page .category-all ul {
    list-style-type: disc;
  }
}

+tablet-desktop() {
  .category-all-page .category-list-item {
    margin: 10px 12px;
  }

  ul.category-list {
    text-align: center;
  }

  li.category-list-item {
    display: inline-block;
  }

  li.category-list-item a {
    line-height: 4;
    word-break: keep-all;
    padding: 10px 15px;
    font-weight: bold;
    color: #fff;
    background: $btn-default-bg;
    border-bottom: none;
    border-radius: 15px;
    btn-shadow();

    &:hover {
      text-decoration: none;
      background: $btn-default-hover-bg;
    }
  }
}

/* tags */
.tag-cloud a, //标签云
.posts-expand .post-tags a { //文章末标签
  padding: 2px 10px;
  margin: 8px;
  background: #f2f2f2;
  border-bottom: none;
  border-radius: 15px;
  btn-shadow();

  &:hover {
    color: #fff !important;
    text-decoration: none;
    background: $btn-default-hover-bg;
  }
}

/***********************************************************/
/******************** Valine Comment ***********************/
/***********************************************************/

/* comment-圆角 */
.comments {
  myradius();
}

/* comment-不显示 OS 浏览器 */
.v .vlist .vcard .vhead .vsys {
  display: none !important;
}

/* comment-文字颜色 */
.v p, //评论正文
.v a, //超链接
.v em, //斜体
.v .vwrap .vheader .vinput { //输入框
  color: var(--text-color) !important;
}

/* comment-按钮 */
.v .vlist .vcard .vh .vmeta .vat, //回复按钮
.v .vwrap .vedit .vctrl span, //表情按钮
.v .vinfo .col, //预览按钮
.v .vinfo .vcount .vnum { //评论框下评论数
  color: var(--link-color) !important;
}

/* comment-查看更多、评论按钮 */
.v .vbtn {
  border: none !important;
  color: #fff !important;
  background: $btn-default-bg !important;
  btn-shadow();

  &:hover {
    background: $btn-default-hover-bg !important;
  }
}

/* comment-MD图标 */
.v .vwrap .vcontrol .col svg {
  fill: var(--link-color) !important;
  opacity: 0.75;
}

/* comment-输入框 */
textarea#veditor.veditor.vinput {
  background: url($comment-bg-url) 100% 100% no-repeat;
  color: var(--text-color);
}

/* comment-行内代码背景 */
.v code {
  color: var(--text-color) !important;
  background-color: inherit !important;
}

/* comment-代码块背景 */
.v pre {
  background-color: rgb(29, 31, 33) !important;
}

/* comment-代码块代码颜色 */
.v pre code {
  color: #c5c8c6 !important;
}

/***********************************************************/
/*********************** 黑暗模式设置 ************************/
/***********************************************************/

@media (prefers-color-scheme: dark) {

  /* 网站背景 */
  body {
    background-image: none;
  }

  /* 引用文字与侧边介绍栏 */
  blockquote,
  .site-description {
    color: #ccc;
  }

  /* note式引用框上下引号 */
  .blockquote-center {
    &:before {
      border-top: 1px solid #111;
      filter: invert(100%);
    }

    &:after {
      border-bottom: 1px solid #111;
      filter: invert(100%);
    }
  }

  /* 文章标题下信息栏链接 */
  .post-meta a {
    color: #bbb;

    &:hover {
      color: var(--link-hover-color);
    }
  }

  /* 正文标签提示框背景 */
  .post-body .note {
    background: var(--body-bg-color) !important;
  }

  /* 标签 */
  .tag-cloud a,
  .posts-expand .post-tags a {
    color: var(--text-color) !important;
    background: $btn-default-bg;
  }

  /* 长回复评论隐藏展开 */
  .v .vlist .vcard .vcontent.expand {
    &:before {
      background: linear-gradient(180deg, hsla(0, 0%, 0%, 0), hsla(210, 29%, 20%, .9)) !important;
    }

    &:after {
      color: var(--text-color) !important;
      background: hsla(210, 29%, 20%, .9) !important;
    }
  }
}